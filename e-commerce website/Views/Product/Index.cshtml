﻿
@model IEnumerable<Product>

@{
	ViewData["Title"] = "List of Products";
}
<style>
	.add-product-button {
		position: fixed;
		bottom: 20px;
		right: 20px;
	}
</style>




<div class="row">
	@foreach (var item in Model)
	{
		<div class="col-md-4 col-xs-6 border-primary mb-3">
			<div class="card mb-3" style="max-width: 540px;">
				<div class="row g-0">
					<div class="col-md-12">
						<div class="card-header text-white bg-info">
							<p class="card-text">
								<h5 class="card-title">
									@item.ProductType
									@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
									{
										<a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
									}
								</h5>
							</p>
						</div>
					</div>
					<div class="col-md-6">
						<img src="~/Images/T-shirts/@item.Image" width="100%" alt="@item.Name" style="width:240px;height:400px;">
					</div>
					<div class="col-md-6">
						<div class="card-body">
							
							<p class="card-text"><b>Brand: </b>@item.Name</p>
							<p class="card-text"><b>Category: </b>@item.ProductType</p>
							<p class="card-text ">
								<b>Status: </b> Available
							</p>

						</div>
					</div>
					<div class="col-md-12">
						<div class="card-footer ">
							<p class="card-text">
								<a class="btn btn-success text-white"
								   asp-controller="Orders"
								   asp-action="AddItemToShoppingCart"
								   asp-route-id="@item.Id">
									<i class="bi bi-cart-plus"></i> Add to Cart (Price @item.Price.ToString("c"))
								</a>
								<a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id">
									<i class="bi bi-eye-fill"></i> Show Details
								</a>
							</p>
						</div>
					</div>
				</div>
			</div>
			@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
			{
				<a class="btn btn-primary add-product-button" asp-action="Create" asp-controller="Product">
					<i class="bi bi-plus"></i> Add New Product
				</a>
			}
		</div>
	}
</div>

