﻿
@model IEnumerable<Product>

@{
    ViewData["Title"] = "List of Movies";
}
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.ProductType
                                    <a class="text-white float-right" ><i class="bi bi-pencil-square"></i></a>
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="~/Images/T-shirts/@item.ImageUrl" width="100%" alt="@item.Name" style="width:240px;height:400px;">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@item.Description</p>
                            <p class="card-text"><b>Brand: </b>@item.Name</p>
                            <p class="card-text"><b>Category: </b>@item.ProductType</p>
                            <p class="card-text ">
                                <b>Status: </b>
                            </p>

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-success text-white"> <i class="bi bi-cart-plus"></i> Add to cart (Price @item.Price.ToString("c"))</a>
                                <a class="btn btn-outline-primary float-right" > <i class="bi bi-eye-fill"></i> Show Details</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

